<UserControl x:Class="WpfAppTest.View.Graphic.TransparencyEx"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfAppTest.View.Graphic"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="https://www.urbanbrush.net/web/wp-content/uploads/edd/2017/11/%EC%8A%A4%ED%81%AC%EB%A6%B0%EC%83%B7-2017-11-11-%EC%98%A4%EC%A0%84-12.29.48.png" />
        </Grid.Background>
        <Button Foreground="#0000af" FontSize="20" Content="계속진행..." Height="50" Margin="602,390,10,10" 
                Background="#00ff00" Opacity="0.3">
            <Button.OpacityMask>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#20aaaaaa" Offset="0"/>
                    <GradientStop Color="#ffaaaaaa" Offset="1"/>
                    <GradientStop Color="#20aaaaaa" Offset="1"/>
                </LinearGradientBrush>
            </Button.OpacityMask>
        </Button>
            
    </Grid>
</UserControl>
