<UserControl x:Class="WpfAppTest.View.Graphic.RadialGradientBrushEx"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfAppTest.View.Graphic"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Ellipse Width="100" Height="100" Stroke="Black">
            <Ellipse.Fill>
                <RadialGradientBrush RadiusX="0.7" RadiusY="0.7" Center="0.5 0.5" GradientOrigin="0.7 0.3">
                    <GradientStop Color="White" Offset="0" />
                    <GradientStop Color="Blue"  Offset="1"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
            
    </Grid>
</UserControl>
