<UserControl x:Class="WpfAppTest.View.Graphic.VisualBrushEx"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfAppTest.View.Graphic"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <Button x:Name="btn01" Content="버튼1" Width="100" Height="50" Margin="10" HorizontalAlignment="Left"></Button>
            <Rectangle Margin="10" Height="50" HorizontalAlignment="Left" Width="100">
                <Rectangle.Fill>
                    <VisualBrush Visual="{Binding ElementName=btn01}" ></VisualBrush>
                </Rectangle.Fill>
                
            </Rectangle>
        
        </StackPanel>
            
    </Grid>
</UserControl>
