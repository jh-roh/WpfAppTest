<UserControl x:Class="WpfAppTest.View.DrugManagement.ReceivingScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:local="clr-namespace:WpfAppTest.View.DrugManagement"
             xmlns:model="clr-namespace:WpfAppTest.ViewModel"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             mc:Ignorable="d"
             Width="1200"
             Height="1200"
             Background="White">

    <!-- 컨버터 정의 -->
    <UserControl.Resources>
        <local:StringToBoolConverter x:Key="StringToBoolConverter"/>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- 필터 버튼 스타일 -->
        <Style x:Key="FilterButtonStyle"
               TargetType="RadioButton">
            <Setter Property="Width"
                    Value="200"/>
            <Setter Property="Height"
                    Value="35"/>
            <Setter Property="Margin"
                    Value="3"/>
            <Setter Property="FontSize"
                    Value="12"/>
            <Setter Property="FontWeight"
                    Value="Medium"/>
            <Setter Property="Foreground"
                    Value="#555555"/>
            <Setter Property="Background"
                    Value="#F8F9FA"/>
            <Setter Property="BorderBrush"
                    Value="#DEE2E6"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="8,4"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked"
                                     Value="True">
                                <Setter TargetName="Border"
                                        Property="Background"
                                        Value="#007ACC"/>
                                <Setter TargetName="Border"
                                        Property="BorderBrush"
                                        Value="#005A9E"/>
                                <Setter Property="Foreground"
                                        Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="Border"
                                        Property="Background"
                                        Value="#E3F2FD"/>
                                <Setter TargetName="Border"
                                        Property="BorderBrush"
                                        Value="#2196F3"/>
                            </Trigger>
                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Setter TargetName="Border"
                                        Property="Background"
                                        Value="#BBDEFB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 카드 스타일 -->
        <Style x:Key="LocationCardStyle"
               TargetType="Border">
            <Setter Property="Width"
                    Value="280"/>
            <Setter Property="Height"
                    Value="180"/>
            <Setter Property="Background"
                    Value="White"/>
            <Setter Property="BorderBrush"
                    Value="#E0E0E0"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="CornerRadius"
                    Value="8"/>
            <Setter Property="Margin"
                    Value="0,0,15,0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#CCCCCC"
                                      Direction="270"
                                      ShadowDepth="2"
                                      Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 상태 배지 스타일 -->
        <Style x:Key="StatusBadgeStyle"
               TargetType="Border">
            <Setter Property="CornerRadius"
                    Value="12"/>
            <Setter Property="Padding"
                    Value="8,4"/>
            <Setter Property="Margin"
                    Value="0,0,5,0"/>
        </Style>

        <!-- 둥근 모서리 버튼 스타일 -->
        <Style x:Key="RoundedButtonStyle"
               TargetType="Button">
            <Setter Property="Background"
                    Value="#007ACC"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="FontWeight"
                    Value="Medium"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="Border"
                                        Property="Background"
                                        Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Setter TargetName="Border"
                                        Property="Background"
                                        Value="#004085"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 둥근 모서리 TextBox 스타일 -->
        <Style x:Key="RoundedTextBoxStyle"
               TargetType="{x:Type TextBox}">
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="BorderBrush"
                    Value="#D0D0D0"/>
            <Setter Property="Padding"
                    Value="12,8"/>
            <!--<Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="{TemplateBinding Padding}"
                                          VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused"
                                     Value="True">
                                <Setter TargetName="Border"
                                        Property="BorderBrush"
                                        Value="#2196F3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>-->
        </Style>

        <!-- 페이지네이션 버튼 스타일 -->
        <Style x:Key="PaginationButtonStyle"
               TargetType="Button">
            <Setter Property="Width"
                    Value="32"/>
            <Setter Property="Height"
                    Value="32"/>
            <Setter Property="Background"
                    Value="#F8F9FA"/>
            <Setter Property="BorderBrush"
                    Value="#DEE2E6"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="FontSize"
                    Value="12"/>
            <Setter Property="FontWeight"
                    Value="Medium"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="Border"
                                        Property="Background"
                                        Value="#E3F2FD"/>
                                <Setter TargetName="Border"
                                        Property="BorderBrush"
                                        Value="#2196F3"/>
                            </Trigger>
                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Setter TargetName="Border"
                                        Property="Background"
                                        Value="#BBDEFB"/>
                            </Trigger>
                            <Trigger Property="IsEnabled"
                                     Value="False">
                                <Setter TargetName="Border"
                                        Property="Background"
                                        Value="#F0F0F0"/>
                                <Setter TargetName="Border"
                                        Property="BorderBrush"
                                        Value="#CCCCCC"/>
                                <Setter Property="Foreground"
                                        Value="#999999"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <UserControl.DataContext>
        <model:ReceivingScreenViewModel></model:ReceivingScreenViewModel>
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 상단 검색 및 필터 섹션 (통합) -->
        <Border Grid.Row="0"
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="0,0,0,1"
                Padding="20">
            <StackPanel>
                <TextBlock Text="검색 및 필터"
                           FontWeight="Bold"
                           FontSize="16"
                           Foreground="#333333"
                           Margin="0,0,0,15"/>

                <!-- 수평 스크롤 가능한 컨트롤 그룹 -->
                <ScrollViewer HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Disabled"
                              Padding="5">
                    <StackPanel Orientation="Horizontal">
                        <!-- 검색 텍스트 -->
                        <!--<Border Background="#F8F9FA"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="15"
                                Margin="0,0,15,0"
                                MinWidth="250">
                            <StackPanel>
                                <TextBlock Text="검색텍스트"
                                           FontWeight="Bold"
                                           FontSize="14"
                                           Foreground="#333333"
                                           Margin="0,0,0,8"/>
                                <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                         Height="36"
                                         FontSize="14"
                                         Style="{StaticResource RoundedTextBoxStyle}"/>
                            </StackPanel>
                        </Border>-->

                        <!-- 약품 분류 필터 (페이지네이션 포함) -->
                        <Border Background="#F8F9FA"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="15"
                                Margin="0,0,15,0"
                                Width="700">
                            <StackPanel>
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                               Text="약품 분류"
                                               FontWeight="Bold"
                                               FontSize="14"
                                               Foreground="#333333"
                                               VerticalAlignment="Center"/>

                                    <!-- 페이지네이션 컨트롤 -->
                                    <StackPanel Grid.Column="1"
                                                Orientation="Horizontal"
                                                VerticalAlignment="Center">
                                        <Button Content="◀"
                                                Command="{Binding PreviousPageCommand}"
                                                Style="{StaticResource PaginationButtonStyle}"
                                                Margin="0,0,5,0"/>

                                        <TextBlock Text="{Binding PageInfo}"
                                                   FontSize="12"
                                                   Foreground="#666666"
                                                   VerticalAlignment="Center"
                                                   Margin="5,0"/>

                                        <Button Content="▶"
                                                Command="{Binding NextPageCommand}"
                                                Style="{StaticResource PaginationButtonStyle}"
                                                Margin="5,0,0,0"/>
                                    </StackPanel>
                                </Grid>

                                <!-- 검색 텍스트 박스 추가 -->
                                <Border Background="White"
                                        BorderBrush="#D0D0D0"
                                        BorderThickness="1"
                                        CornerRadius="6"
                                        Padding="12,8"
                                        Margin="0,0,0,12">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBox Grid.Column="0"
                                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                                 Height="32"
                                                 FontSize="13"
                                                 VerticalAlignment="Center"
                                                 BorderThickness="0"
                                                 Background="Transparent"
                                                 Foreground="#333333"
                                                 VerticalContentAlignment="Center"
                                                 Style="{StaticResource RoundedTextBoxStyle}">
                                            <!--<TextBox.Style>
                                                <Style TargetType="TextBox"
                                                       BasedOn="{StaticResource RoundedTextBoxStyle}">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="TextBox">
                                                                <Border x:Name="Border"
                                                                        Background="{TemplateBinding Background}"
                                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                                        CornerRadius="4">
                                                                    <ScrollViewer x:Name="PART_ContentHost"
                                                                                  Margin="{TemplateBinding Padding}"
                                                                                  VerticalAlignment="Center"/>
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsFocused"
                                                                             Value="True">
                                                                        <Setter TargetName="Border"
                                                                                Property="BorderBrush"
                                                                                Value="#2196F3"/>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </TextBox.Style>-->
                                        </TextBox>

                                        <!-- 검색 아이콘 -->
                                        <Path Grid.Column="1"
                                              Data="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"
                                              Fill="#999999"
                                              Width="16"
                                              Height="16"
                                              VerticalAlignment="Center"
                                              Margin="8,0,0,0"
                                              Stretch="Uniform"/>
                                    </Grid>
                                </Border>

                                <!-- 페이지별 약품 분류 버튼들 -->
                                <ItemsControl ItemsSource="{Binding PagedDrugCategories}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <RadioButton Content="{Binding Name}"
                                                         Command="{Binding DataContext.FilterCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                         CommandParameter="{Binding Code}"
                                                         Style="{StaticResource FilterButtonStyle}">
                                                <RadioButton.IsChecked>
                                                    <MultiBinding Converter="{StaticResource StringToBoolConverter}">
                                                        <Binding Path="DataContext.SelectedFilter"
                                                                 RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                                        <Binding Path="Code"/>
                                                    </MultiBinding>
                                                </RadioButton.IsChecked>

                                            </RadioButton>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>

                        <!-- 추가 필터 옵션 (예시) -->
                        <Border Background="#F8F9FA"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="15"
                                Margin="0,0,15,0"
                                MinWidth="200">
                            <StackPanel>
                                <TextBlock Text="상태 필터"
                                           FontWeight="Bold"
                                           FontSize="14"
                                           Foreground="#333333"
                                           Margin="0,0,0,10"/>
                                <CheckBox Content="신규"
                                          Margin="0,0,0,5"/>
                                <CheckBox Content="유효기간경과"
                                          Margin="0,0,0,5"/>
                                <CheckBox Content="일련번호중복"
                                          Margin="0,0,0,5"/>
                            </StackPanel>
                        </Border>

                        <!-- 정렬 옵션 (예시) -->
                        <Border Background="#F8F9FA"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="15"
                                Margin="0,0,15,0"
                                MinWidth="150">
                            <StackPanel>
                                <TextBlock Text="정렬"
                                           FontWeight="Bold"
                                           FontSize="14"
                                           Foreground="#333333"
                                           Margin="0,0,0,10"/>
                                <RadioButton Content="이름순"
                                             Margin="0,0,0,5"/>
                                <RadioButton Content="수량순"
                                             Margin="0,0,0,5"/>
                                <RadioButton Content="최신순"
                                             Margin="0,0,0,5"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </StackPanel>
        </Border>

        <!-- 중간 항목 상세 섹션 -->
        <Border Grid.Row="1"
                Background="#FAFBFC"
                BorderBrush="#E0E0E0"
                BorderThickness="0,0,0,1"
                Padding="20">
            <StackPanel>
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="항목 리스트"
                               FontWeight="Bold"
                               FontSize="16"
                               Foreground="#333333"
                               VerticalAlignment="Center"/>

                    <!-- 항목리스트 페이지네이션 컨트롤 -->
                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                VerticalAlignment="Center">
                        <Button Content="◀"
                                Command="{Binding ItemLocationsPreviousPageCommand}"
                                Style="{StaticResource PaginationButtonStyle}"
                                Margin="0,0,5,0"/>

                        <TextBlock Text="{Binding ItemLocationsPageInfo}"
                                   FontSize="12"
                                   Foreground="#666666"
                                   VerticalAlignment="Center"
                                   Margin="5,0"/>

                        <Button Content="▶"
                                Command="{Binding ItemLocationsNextPageCommand}"
                                Style="{StaticResource PaginationButtonStyle}"
                                Margin="5,0,0,0"/>
                    </StackPanel>
                </Grid>

                <ScrollViewer HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Disabled"
                              Padding="5">
                    <StackPanel Orientation="Horizontal">
                        <!-- 동적으로 생성되는 장비위치 카드들 -->
                        <ItemsControl ItemsSource="{Binding PagedItemLocations}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource LocationCardStyle}">
                                        <Grid Margin="15">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="1*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- 카드 헤더 -->
                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="1*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0"
                                                           Text="{Binding LocationCode}"
                                                           FontWeight="Bold"
                                                           FontSize="14"
                                                           Foreground="#333333"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,0,12"/>

                                                <!-- 선택 표시 -->
                                                <Border Grid.Column="1"
                                                        Background="#4CAF50"
                                                        CornerRadius="12"
                                                        Width="24"
                                                        Height="24"
                                                        Visibility="{Binding IsSelected, Converter={StaticResource BoolToVisibilityConverter}}">
                                                    <Path Data="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"
                                                          Fill="White"
                                                          Width="14"
                                                          Height="14"
                                                          Stretch="Uniform"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                                </Border>
                                            </Grid>

                                            <!-- 카드 내용 -->
                                            <Grid Grid.Row="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="1*"/>
                                                    <ColumnDefinition Width="1*"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- 왼쪽: 약품 정보 -->
                                                <StackPanel Grid.Column="0"
                                                            Margin="0,0,10,0">
                                                    <TextBlock Text="약품코드"
                                                               FontSize="10"
                                                               FontWeight="Bold"
                                                               Foreground="#666666"
                                                               Margin="0,0,0,4"/>
                                                    <TextBlock Text="{Binding DrugCode}"
                                                               FontSize="12"
                                                               FontWeight="Medium"
                                                               Foreground="#333333"
                                                               Margin="0,0,0,8"/>

                                                    <TextBlock Text="약품명"
                                                               FontSize="10"
                                                               FontWeight="Bold"
                                                               Foreground="#666666"
                                                               Margin="0,0,0,4"/>
                                                    <TextBlock Text="{Binding DrugName}"
                                                               FontSize="12"
                                                               FontWeight="Medium"
                                                               Foreground="#333333"
                                                               Margin="0,0,0,8"/>

                                                    <TextBlock Text="일련번호"
                                                               FontSize="10"
                                                               FontWeight="Bold"
                                                               Foreground="#666666"
                                                               Margin="0,0,0,4"/>
                                                    <TextBlock Text="{Binding SerialNumber}"
                                                               FontSize="12"
                                                               FontWeight="Medium"
                                                               Foreground="#333333"
                                                               Margin="0,0,0,8"/>

                                                    <TextBlock Text="유효기간"
                                                               FontSize="10"
                                                               FontWeight="Bold"
                                                               Foreground="#666666"
                                                               Margin="0,0,0,4"/>
                                                    <TextBlock Text="{Binding ExpiryDate, StringFormat='yyyy-MM-dd'}"
                                                               FontSize="12"
                                                               FontWeight="Medium"
                                                               Foreground="#333333"
                                                               Margin="0,0,0,8"/>

                                                    <TextBlock Text="수량"
                                                               FontSize="10"
                                                               FontWeight="Bold"
                                                               Foreground="#666666"
                                                               Margin="0,0,0,4"/>
                                                    <TextBlock Text="{Binding Quantity}"
                                                               FontSize="12"
                                                               FontWeight="Medium"
                                                               Foreground="#333333"/>
                                                </StackPanel>

                                                <!-- 오른쪽: 상태 정보 -->
                                                <StackPanel Grid.Column="1"
                                                            VerticalAlignment="Top">
                                                    <StackPanel Orientation="Horizontal"
                                                                Margin="0,0,0,5">
                                                        <Border Background="#4CAF50"
                                                                Style="{StaticResource StatusBadgeStyle}">
                                                            <TextBlock Text="정상"
                                                                       FontSize="10"
                                                                       Foreground="White"
                                                                       FontWeight="Medium"/>
                                                        </Border>
                                                        <Border Background="#F44336"
                                                                Style="{StaticResource StatusBadgeStyle}">
                                                            <TextBlock Text="유효기간경과"
                                                                       FontSize="10"
                                                                       Foreground="White"
                                                                       FontWeight="Medium"/>
                                                        </Border>
                                                    </StackPanel>
                                                    <Border Background="#FF9800"
                                                            Style="{StaticResource StatusBadgeStyle}">
                                                        <TextBlock Text="일련번호중복"
                                                                   FontSize="10"
                                                                   Foreground="White"
                                                                   FontWeight="Medium"/>
                                                    </Border>

                                                    <!-- 신규 항목 표시 -->
                                                    <Border Background="#2196F3"
                                                            CornerRadius="12"
                                                            Padding="8,4"
                                                            Margin="0,10,0,0"
                                                            Visibility="{Binding IsNew, Converter={StaticResource BoolToVisibilityConverter}}">
                                                        <TextBlock Text="신규"
                                                                   FontSize="10"
                                                                   Foreground="White"
                                                                   FontWeight="Medium"/>
                                                    </Border>
                                                </StackPanel>
                                            </Grid>

                                            <!-- 추가 버튼 -->
                                            <Button Grid.Row="2"
                                                    Content="추가"
                                                    Command="{Binding DataContext.AddItemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding LocationCode}"
                                                    Height="32"
                                                    Margin="0,12,0,0"
                                                    Style="{StaticResource RoundedButtonStyle}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- 빈 위치 카드 (항상 표시) -->
                        <Border Style="{StaticResource LocationCardStyle}"
                                Background="#F8F9FA">
                            <Grid Margin="15">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0"
                                           Text="빈 위치"
                                           FontWeight="Bold"
                                           FontSize="14"
                                           Foreground="#666666"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,12"/>

                                <StackPanel Grid.Row="1"
                                            VerticalAlignment="Center">
                                    <Ellipse Width="50"
                                             Height="50"
                                             Fill="#F0F0F0"
                                             Stroke="#CCCCCC"
                                             StrokeThickness="2"
                                             HorizontalAlignment="Center"
                                             Margin="0,0,0,12"/>
                                    <TextBlock Text="사용 가능한 위치"
                                               FontSize="12"
                                               HorizontalAlignment="Center"
                                               Foreground="#666666"/>
                                    <TextBlock Text="항목을 추가하세요"
                                               FontSize="10"
                                               HorizontalAlignment="Center"
                                               Foreground="#999999"
                                               Margin="0,5,0,0"/>
                                </StackPanel>

                                <Button Grid.Row="2"
                                        Content="추가"
                                        Command="{Binding AddItemCommand}"
                                        CommandParameter="NEW"
                                        Height="32"
                                        Margin="0,12,0,0"
                                        Background="#6C757D"
                                        Foreground="White"
                                        BorderThickness="0"
                                        FontWeight="Medium"
                                        Style="{StaticResource RoundedButtonStyle}"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </StackPanel>
        </Border>

        <!-- 하단 입고 리스트 및 요약 섹션 -->
        <Border Grid.Row="2"
                Background="White"
                Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 바코드 입력 -->
                <StackPanel Grid.Row="0"
                            Orientation="Horizontal"
                            Margin="0,0,0,15">
                    <TextBlock Text="항목"
                               FontWeight="Bold"
                               FontSize="14"
                               Foreground="#333333"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    <Ellipse Width="24"
                             Height="24"
                             Fill="#E3F2FD"
                             Stroke="#2196F3"
                             StrokeThickness="2"
                             VerticalAlignment="Center"
                             Margin="0,0,10,0"/>
                    <TextBlock Text="(바코드 텍스트)"
                               VerticalAlignment="Center"
                               Foreground="#666666"
                               Margin="0,0,10,0"/>
                    <TextBox Text="{Binding BarcodeText, UpdateSourceTrigger=PropertyChanged}"
                             Width="250"
                             Height="32"
                             Style="{StaticResource RoundedTextBoxStyle}"/>
                </StackPanel>

                <!-- 입고 리스트 테이블 -->
                <dxg:GridControl Grid.Row="1"
                                 ItemsSource="{Binding ReceivingList, Mode=TwoWay}">
                    <dxg:GridControl.Columns>
                        <dxg:GridColumn Width="60"
                                        Header="삭제"
                                        HorizontalHeaderContentAlignment="Center"
                                        AllowEditing="False">
                            <dxg:GridColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="✕"
                                            Command="{Binding DataContext.RemoveReceivingItemCommand, RelativeSource={RelativeSource AncestorType=dxg:GridControl}}"
                                            CommandParameter="{Binding RowData.Row}"
                                            Width="32"
                                            Height="28"
                                            Background="#F44336"
                                            Foreground="White"
                                            FontWeight="Bold"
                                            BorderThickness="0"
                                            Style="{StaticResource RoundedButtonStyle}"/>
                                </DataTemplate>
                            </dxg:GridColumn.CellTemplate>
                        </dxg:GridColumn>
                        <dxg:GridColumn Width="60"
                                        Header="입출고"
                                        HorizontalHeaderContentAlignment="Center"
                                        AllowEditing="False">
                            <dxg:GridColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="+"
                                            Command="{Binding DataContext.AddQuantityCommand, RelativeSource={RelativeSource AncestorType=dxg:GridControl}}"
                                            CommandParameter="{Binding RowData.Row}"
                                            Width="32"
                                            Height="28"
                                            Background="#4CAF50"
                                            Foreground="White"
                                            FontWeight="Bold"
                                            BorderThickness="0"
                                            Style="{StaticResource RoundedButtonStyle}"/>
                                </DataTemplate>
                            </dxg:GridColumn.CellTemplate>
                        </dxg:GridColumn>

                        <dxg:GridColumn Width="180"
                                        Header="약품이름"
                                        FieldName="DrugName"
                                        HorizontalHeaderContentAlignment="Center"
                                        AllowEditing="False">
                            <dxg:GridColumn.EditSettings>
                                <dxe:TextEditSettings HorizontalContentAlignment="Center"
                                                      TextWrapping="Wrap"/>
                            </dxg:GridColumn.EditSettings>
                        </dxg:GridColumn>
                        <dxg:GridColumn Width="140"
                                        Header="일련번호"
                                        FieldName="SerialNumber"
                                        HorizontalHeaderContentAlignment="Center"
                                        AllowEditing="False">
                            <dxg:GridColumn.EditSettings>
                                <dxe:TextEditSettings HorizontalContentAlignment="Center"
                                                      TextWrapping="Wrap"/>
                            </dxg:GridColumn.EditSettings>
                        </dxg:GridColumn>
                        <dxg:GridColumn Width="100"
                                        Header="수량"
                                        FieldName="Quantity"
                                        HorizontalHeaderContentAlignment="Center"
                                        AllowEditing="False">
                            <dxg:GridColumn.EditSettings>
                                <dxe:TextEditSettings HorizontalContentAlignment="Center"
                                                      TextWrapping="Wrap"/>
                            </dxg:GridColumn.EditSettings>
                        </dxg:GridColumn>
                        <dxg:GridColumn Width="140"
                                        Header="약품 총 수량"
                                        FieldName="CurrentTotalQuantity"
                                        HorizontalHeaderContentAlignment="Center"
                                        AllowEditing="False">
                            <dxg:GridColumn.EditSettings>
                                <dxe:TextEditSettings HorizontalContentAlignment="Center"
                                                      TextWrapping="Wrap"/>
                            </dxg:GridColumn.EditSettings>
                        </dxg:GridColumn>

                    </dxg:GridControl.Columns>
                    <dxg:GridControl.View>
                        <dxg:TableView FontSize="14"
                                       RowMinHeight="40"
                                       HeaderPanelMinHeight="35"
                                       ShowGroupPanel="False"
                                       ShowIndicator="False"
                                       AllowColumnMoving="False"/>
                    </dxg:GridControl.View>
                </dxg:GridControl>

                <!-- 요약 정보 -->
                <Border Grid.Row="2"
                        Background="#F8F9FA"
                        BorderBrush="#E0E0E0"
                        BorderThickness="0,1,0,0"
                        Padding="20"
                        Margin="0,15,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <Line X1="0"
                                  Y1="0"
                                  X2="250"
                                  Y2="0"
                                  Stroke="#CCCCCC"
                                  StrokeThickness="1"
                                  Margin="0,0,0,8"/>
                            <TextBlock Text="="
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="#333333"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding TotalReceivingQuantity, StringFormat='총 입고 수량: {0} EA'}"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#333333"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding BoxSummary, StringFormat='({0})'}"
                                       FontSize="13"
                                       Foreground="#666666"/>
                        </StackPanel>

                        <Button Grid.Column="1"
                                Content="저장"
                                Command="{Binding SaveCommand}"
                                Width="120"
                                Height="45"
                                FontSize="16"
                                FontWeight="Bold"
                                Style="{StaticResource RoundedButtonStyle}"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl> 