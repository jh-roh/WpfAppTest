<UserControl x:Class="WpfAppTest.View.DrugManagement.ReceivingScreen_V2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:local="clr-namespace:WpfAppTest.View.DrugManagement"
             xmlns:model="clr-namespace:WpfAppTest.ViewModel"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             mc:Ignorable="d"
             Width="1100"
             Height="1370"
             Background="White">

    <!-- 컨버터 정의 -->
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/WpfAppTest;component/ResourceDictionary/ReceivingScreenDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <UserControl.DataContext>
        <model:ReceivingScreenViewModel></model:ReceivingScreenViewModel>
    </UserControl.DataContext>

    <Grid >
        <!-- 하단 입고 리스트 및 요약 섹션 -->
        <Border Grid.Row="0"
                Background="White"
                Padding="20" Margin="38,0,38,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <!-- 바코드 입력 -->
                    <StackPanel Grid.Row="0"
                Orientation="Horizontal"
                Margin="0,0,0,15">
                        <TextBlock Text="출고 항목"
                   FontWeight="Bold"
                   FontSize="30"
                   Foreground="#333333"
                   VerticalAlignment="Center"
                   Margin="0,0,10,0"/>
                        <TextBlock Text="(바코드 텍스트)" FontSize="20"
                   VerticalAlignment="Center"
                   Foreground="#666666"
                   Margin="0,0,10,0"/>
                        <TextBox Text="{Binding BarcodeText, UpdateSourceTrigger=PropertyChanged}"
                 Width="250"
                 Height="32"
                 Style="{StaticResource RoundedTextBoxStyle}"/>
                    </StackPanel>

                    <!-- 그리드 페이지네이션 컨트롤 -->
                    <StackPanel Orientation="Horizontal" Grid.Column="1"
            HorizontalAlignment="Center">
                        <Button Content="◀"
            Command="{Binding ReceivingGridPreviousPageCommand}"
            Style="{StaticResource PaginationButtonStyle}"
            Margin="0,0,5,0"/>

                        <TextBlock Text="{Binding ReceivingGridPageInfo}"
               FontSize="20"
               Foreground="#666666"
               VerticalAlignment="Center"
               Margin="5,0"/>

                        <Button Content="▶"
            Command="{Binding ReceivingGridNextPageCommand}"
            Style="{StaticResource PaginationButtonStyle}"
            Margin="5,0,0,0"/>
                    </StackPanel>
                </Grid>


                <!-- 입고 리스트 테이블 -->
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <dxg:GridControl Grid.Row="0"
                                     ItemsSource="{Binding PagedReceivingList, Mode=TwoWay}">
                        <dxg:GridControl.Columns>
                            <dxg:GridColumn Width="70"
                                            Header="삭제"
                                            HorizontalHeaderContentAlignment="Center"
                                            AllowEditing="False" HeaderStyle="{StaticResource GridColumnHeaderStyleKey}">
                                <dxg:GridColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="✕"
                                                Command="{Binding DataContext.RemoveReceivingItemCommand, RelativeSource={RelativeSource AncestorType=dxg:GridControl}}"
                                                CommandParameter="{Binding RowData.Row}"
                                                Width="45"
                                                Height="40"
                                                Background="#F44336"
                                                Foreground="White"
                                                FontWeight="Bold"
                                                BorderThickness="0"
                                                FontSize="20"
                                                Style="{StaticResource RoundedButtonStyle}" />
                                    </DataTemplate>
                                </dxg:GridColumn.CellTemplate>
                            </dxg:GridColumn>
                            <dxg:GridColumn Width="180"
                                            Header="약품이름"
                                            FieldName="DrugName"
                                            HorizontalHeaderContentAlignment="Center"
                                            AllowEditing="False" HeaderStyle="{StaticResource GridColumnHeaderStyleKey}" CellStyle="{StaticResource GridColumnCellKey}">
                                
                                <dxg:GridColumn.EditSettings>
                                    <dxe:TextEditSettings HorizontalContentAlignment="Center"
                                                          TextWrapping="Wrap"/>
                                </dxg:GridColumn.EditSettings>
                            </dxg:GridColumn>
                            <dxg:GridColumn Width="140"
                                            Header="일련번호"
                                            FieldName="SerialNumber"
                                            HorizontalHeaderContentAlignment="Center"
                                            AllowEditing="False" HeaderStyle="{StaticResource GridColumnHeaderStyleKey}" CellStyle="{StaticResource GridColumnCellKey}">
                                <dxg:GridColumn.EditSettings>
                                    <dxe:TextEditSettings HorizontalContentAlignment="Center"
                                                          TextWrapping="Wrap"/>
                                </dxg:GridColumn.EditSettings>
                            </dxg:GridColumn>
                            <dxg:GridColumn Width="100"
                                            Header="출고 수량"
                                            FieldName="Quantity"
                                            HorizontalHeaderContentAlignment="Center"
                                            AllowEditing="False" HeaderStyle="{StaticResource GridColumnHeaderStyleKey}" CellStyle="{StaticResource GridColumnCellKey}">
                                <dxg:GridColumn.EditSettings>
                                    <dxe:TextEditSettings HorizontalContentAlignment="Center"
                                                          TextWrapping="Wrap"/>
                                </dxg:GridColumn.EditSettings>
                            </dxg:GridColumn>
                            <dxg:GridColumn Width="140"
                                            Header="약품 총 수량"
                                            FieldName="CurrentTotalQuantity"
                                            HorizontalHeaderContentAlignment="Center"
                                            AllowEditing="False" HeaderStyle="{StaticResource GridColumnHeaderStyleKey}" CellStyle="{StaticResource GridColumnCellKey}">
                                <dxg:GridColumn.EditSettings>
                                    <dxe:TextEditSettings HorizontalContentAlignment="Center"
                                                          TextWrapping="Wrap" />
                                </dxg:GridColumn.EditSettings>
                            </dxg:GridColumn>

                        </dxg:GridControl.Columns>
                        <dxg:GridControl.View>
                            <dxg:TableView FontSize="14"
                                           RowMinHeight="70"
                                           HeaderPanelMinHeight="60"
                                           ShowGroupPanel="False"
                                           ShowIndicator="False"
                                           AllowColumnMoving="False"/>
                        </dxg:GridControl.View>
                    </dxg:GridControl>

                </Grid>

                <!-- 요약 정보 -->
                <Border Grid.Row="2"
                        Background="#F8F9FA"
                        BorderBrush="#E0E0E0"
                        BorderThickness="0,1,0,0"
                        Padding="20"
                        Margin="0,15,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <Line X1="0"
                                  Y1="0"
                                  X2="250"
                                  Y2="0"
                                  Stroke="#CCCCCC"
                                  StrokeThickness="1"
                                  Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding TotalReceivingQuantity, StringFormat='총 입고 수량: {0} EA'}"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#333333"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding BoxSummary, StringFormat='({0})'}"
                                       FontSize="13"
                                       Foreground="#666666"/>
                        </StackPanel>

                        <Button Grid.Column="1"
                                Content="저장"
                                Command="{Binding SaveCommand}"
                                Width="120"
                                Height="45"
                                FontSize="16"
                                FontWeight="Bold"
                                Style="{StaticResource RoundedButtonStyle}"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl> 